varnishtest "Content for ze.tt is delivered and cached"


server s1 {
    rxreq
    expect req.url == "/feed-zon"
	expect req.http.host == "ze.tt"
    expect req.http.Cookie == <undef>
    txresp -hdr "X-Backend: zett"
} -start

@ call varnish(['zett'])
    include "/etc/varnish/vcl_includes/test.vcl";
@ endcall

client c1 {
    txreq -url "/zett-hp-feed" -hdr "Host: app-cache.zeit.de" \
        -hdr "Cookie: foo"
    rxresp
    expect resp.http.X-Backend == "zett"
} -run

varnish v1 -expect cache_miss == 1
varnish v1 -expect cache_hit == 0

client c1 -run

varnish v1 -expect cache_miss == 1
varnish v1 -expect cache_hit == 1
