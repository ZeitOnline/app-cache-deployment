varnishtest "Content for academics is delivered and cached"


server s1 {
    rxreq
    expect req.url == "/cached-rss-feeds/adpanel_333644.html"
	expect req.http.host == "jobs.zeit.de"
    expect req.http.Cookie == <undef>
    txresp -hdr "X-Backend: academics"
} -start

@ call varnish(['default'])
    include "/etc/varnish/vcl_includes/test.vcl";
@ endcall

client c1 {
    txreq -url "/academics-hp-feed" -hdr "Host: app-cache.zeit.de" \
        -hdr "Cookie: foo"
    rxresp
    expect resp.http.X-Backend == "academics"
} -run

varnish v1 -expect cache_miss == 1
varnish v1 -expect cache_hit == 0

client c1 -run

varnish v1 -expect cache_miss == 1
varnish v1 -expect cache_hit == 1

