varnishtest "Content for brandeins is delivered and cached"


server s1 {
    rxreq
    expect req.url == "/zeit-feed.rss"
	expect req.http.host == "www.brandeins.de"
    expect req.http.Cookie == <undef>
    txresp -hdr "X-Backend: brandeins"
} -start

@ call varnish(['brandeins'])
    include "/etc/varnish/vcl_includes/main.vcl";
@ endcall

client c1 {
    txreq -url "/brandeins-hp-feed" -hdr "Host: app-cache.zeit.de" \
        -hdr "Cookie: foo"
    rxresp
    expect resp.http.X-Backend == "brandeins"
} -run

varnish v1 -expect cache_miss == 1
varnish v1 -expect cache_hit == 0

client c1 -run

varnish v1 -expect cache_miss == 1
varnish v1 -expect cache_hit == 1
