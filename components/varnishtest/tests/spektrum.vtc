varnishtest "Content for spektrum is delivered and cached"


server s1 {
    rxreq
    expect req.url == "/alias/rss/zeit-kooperationsfeed-mit-kategorien/1342995"
	expect req.http.host == "www.spektrum.de"
    expect req.http.Cookie == <undef>
    txresp -hdr "X-Backend: spektrum"
} -start

@ call varnish(['academics'])
    include "/etc/varnish/vcl_includes/test.vcl";
@ endcall

client c1 {
    txreq -url "/spektrum-hp-feed" -hdr "Host: app-cache.zeit.de" \
        -hdr "Cookie: foo"
    rxresp
    expect resp.http.X-Backend == "spektrum"
} -run

varnish v1 -expect cache_miss == 1
varnish v1 -expect cache_hit == 0

client c1 -run

varnish v1 -expect cache_miss == 1
varnish v1 -expect cache_hit == 1
