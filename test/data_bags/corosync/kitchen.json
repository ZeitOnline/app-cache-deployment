{
  	"id": "kitchen",
  	"zeit_rz": "local",
	"cluster_name": "kitchen",
	"nodes": [
	{
	    "name": "app-cache01.zeit.de",
	    "ipaddress": "192.168.34.13"
	},
	{
	    "name": "app-cache02.zeit.de",
	    "ipaddress": "192.168.34.14"
	}
    ],
    "stonith-enabled": false,
	"configuration": [
	{
	    "command": "primitive",
	    "id": "fail_over_ip",
	    "args": "ocf:heartbeat:IPaddr2 params ip=192.168.34.13 cidr_netmask=16 op monitor interval=10s"
	},
        {
	    "command": "primitive",
	    "id": "haproxy_check_http",
	    "args": "ocf:heartbeat:check_http params url=http://localhost/cache_health timeout=20 op monitor interval=60s meta failure-timeout=60s"
        },
        {
            "command": "colocation",
            "id": "haproxy_with_ip",
            "args": "INFINITY: haproxy_check_http fail_over_ip"
        }
    ],
    "ip_nonlocal_bind": true,
    "authkey": "geheim"
}