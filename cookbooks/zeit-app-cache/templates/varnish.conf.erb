[Unit]
Description=Varnish Cache, a high-performance HTTP accelerator
After=network-online.target

[Service]
Type=forking
KillMode=process

# Maximum number of open files (for ulimit -n)
LimitNOFILE=131072

# Locked shared memory - should suffice to lock the shared memory log
# (varnishd -l argument)
# Default log size is 80MB vsl + 1M vsm + header -> 82MB
# unit is bytes
LimitMEMLOCK=85983232

# Enable this to avoid "fork failed" on reload.
TasksMax=infinity

# Maximum size of the corefile.
LimitCORE=infinity

ExecStart=
ExecStart=/usr/sbin/varnishd -a 0.0.0.0:<%=node["varnish"]["port"]%> -T localhost:6082 -f /etc/varnish/default.vcl -s malloc,<%=node["varnish"]["storage-size"]%> -p send_timeout=<%=node["varnish"]["send-timeout"]%> -p workspace_client=<%=node["varnish"]["workspace-client"]%>
ExecReload=/usr/sbin/varnishreload

[Install]
WantedBy=multi-user.target
